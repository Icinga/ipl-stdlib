{
    "name": "ipl/stdlib",
    "description": "ipl Standard Library",
    "type": "library",
    "license": "MIT",
    "require-dev": {
        "phpunit/phpunit": "^4.8.35 || ^5.7 || ^6.5 || ^7.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "files": ["src/functions_include.php"],
        "psr-4": {
            "ipl\\Stdlib\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ipl\\Tests\\Stdlib\\": "tests/php"
        }
    },
    "scripts": {
        "test": "phpunit --testdox || phpunit --verbose",
        "checkstyle": "phpcs"
    }
}
